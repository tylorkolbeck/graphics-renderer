{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Debug",
      "type": "shell",
      "command": "make",
      "options": {
        "cwd": "${workspaceFolder}/3drenderer"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "Run Debug",
      "type": "shell",
      "command": "make",
      "args": [
        "run"
      ],
      "options": {
        "cwd": "${workspaceFolder}/3drenderer"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Clean",
      "type": "shell",
      "command": "make",
      "args": [
        "clean"
      ],
      "options": {
        "cwd": "${workspaceFolder}/3drenderer"
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    }
  ]
}
