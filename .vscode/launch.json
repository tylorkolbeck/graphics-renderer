{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "Debug 3drenderer",
          "type": "cppdbg",
          "request": "launch",
          "program": "${workspaceFolder}/3drenderer/bin/3drenderer",
          "args": [],
          "stopAtEntry": false,
          "cwd": "${workspaceFolder}/3drenderer",
          "environment": [],
          "preLaunchTask": "Build Debug",
          "MIMode": "gdb",
          "setupCommands": [
              {
                  "description": "Enable pretty-printing for GDB",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
              }
          ],
          "externalConsole": false,  // Set to true if you need a separate terminal
          "logging": {
              "trace": true,
              "traceResponse": true,
              "engineLogging": false
          }
      }
  ]
}
